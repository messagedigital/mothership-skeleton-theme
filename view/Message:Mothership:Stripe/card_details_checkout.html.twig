{% extends 'Message:Mothership:Ecommerce::checkout:checkout-layout' %}

{% block javascripts %}
	{{ parent() }}
	{% include 'Message:Mothership:Stripe::javascript' with { 'parent': parent() } %}
{% endblock %}

{% block content %}
	<main class="checkout" id="main-content">
		<section class="row">
			<div class="col-12">
				<h1>Checkout</h1>
				<div class="progress">
					<div>
						<p><strong>Stage 01</strong> Your selection</p>
					</div>
					<div>
						<p><strong>Stage 02</strong> Your details</p>
					</div>
					<div>
						<p><strong>Stage 03</strong> Delivery details</p>
					</div>
					<div class="active">
						<p><strong>Stage 04</strong> Payment</p>
					</div>
					<div>
						<p><strong>Stage 05</strong> Confirmation</p>
					</div>
				</div>
			</div>
		</section>
		<section class="row">
			<div class="col-12">
				<h2>Secure Payment</h2>
			</div>
			<div class="payment col-12">
				{% include 'Message:Mothership:Stripe::billing_info' %}
				<div class="card-info">
					<div class="cards">
						<h3>Cards Accepted</h3>
						<ul>
							<li><i class="pw pw-american-express"></i></li>
							<li><i class="pw pw-mastercard"></i></li>
							<li><i class="pw pw-visa"></i></li>
						</ul>
					 </div>
					 <div class="payment-form">
						{% include 'Message:Mothership:Stripe::form' %}
					</div>
				</div>
			</div>
		</section>
	</main>
{% endblock %}